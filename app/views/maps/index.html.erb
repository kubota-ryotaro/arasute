<p id="notice"><%= notice %></p>

<h1>Maps</h1>

<table>
  <thead>
    <tr>
      <th>店名</th>
      <th>カテゴリ</th>
      <th>営業時間</th>
      <th>定休日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maps.each do |map| %>
      <tr>
        <td><%= map.store_name %></td>
        <td><%= map.small_category %></td>
        <td><%= map.business_hours %></td>
        <td><%= map.regular_holiday %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Map', new_map_path %>
